{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Beat2Beat Swagger",
      "description": "",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],

  
    "paths": {
      "/users": {
        "post": {
          "tags": [
            "Users"
          ],
          "description": "Create new user in system",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that we want to create",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New user is created",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get all users in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Users"
              }
            }
          }
        }
      },


      "/listusers": {
        "get": {
            "tags": [
                "Users"
            ],
            "summary": "Returns all users in the database",
            "responses": {
                "200": {
                    "description": "Returns the list of users",
                    "schema": {
                        "type": "array",
                        "$ref": "#/definitions/Users"
                    }
                }
            }
        }
    },
    
      "/users/{userId}": {
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "ID of user that we want to find",
            "type": "string"
          }
        ],
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get user with given ID",
          "responses": {
            "200": {
              "description": "User is found",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "delete": {
          "summary": "Delete user with given ID",
          "tags": [
            "Users"
          ],
          "responses": {
            "200": {
              "description": "User is deleted",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "put": {
          "summary": "Update user with give ID",
          "tags": [
            "Users"
          ],
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User with new values of properties",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User is updated",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },


      "/signin": {
        "post": {
          "tags": [
            "Users"
          ],
          "description": "Sign In",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that wants to sign in",
              "schema": {
                "$ref": "#/definitions/UserSignIn"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "A user is logged",
              "schema": {
                "$ref": "#/definitions/UserSignIn"
              }
            }
          }
        }
      },



      "/matches": {
        "post": {
          "tags": [
            "Matches"
          ],
          "description": "Create new user in system",
          "parameters": [
            {
              "name": "match",
              "in": "body",
              "description": "Create Match",
              "schema": {
                "$ref": "#/definitions/Matches"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New match is created",
              "schema": {
                "$ref": "#/definitions/Matches"
              }
            }
          }
        },
        "get": {
          "tags": [
            "Matches"
          ],
          "summary": "Get a user's matches",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Matches"
              }
            }
          }
        }
      }
    },

    "definitions": {
      "User": {
        "required": [
          "email",
          "username",
          "surname",
          "name",
          "password",
          "age",
          "description",
          "localization",
          "picture"
        ],
        "properties": {
          "email": {
            "type": "string",
            "uniqueItems": true
          },
          "username": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "age": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "localization": {
            "type": "string"
          }
          
        }
      },
      "Users": {
        "type": "array",
        "$ref": "#/definitions/User"
      },


      
      "UserSignIn": {
        "required": [
          "email",
          "password"         
        ],
        "properties": {
        
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },    


      "Match": {
        "required": [
          "username1",
          "username2",
          "confirmed"
        ],
        "properties": {
          "username1": {
            "type": "string"
          },
          "username2": {
            "type": "string"
          },
          "confirmed": {
            "type": "boolean"
          }
        }
      },

      "Matches": {
        "type": "array",
        "$ref": "#/definitions/Match"
      }

    }
  }


  
  
